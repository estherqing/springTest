		<!--<property name="maxUploadSize" value="209715200" /> &lt;!&ndash; 20MB &ndash;&gt;-->
		<!--&lt;!&ndash; max size of file in memory (in bytes) &ndash;&gt;-->
		<!--<property name="maxInMemorySize" value="209715200" /> &lt;!&ndash; 1MB &ndash;&gt;-->
	<!--</bean>-->
</beans>